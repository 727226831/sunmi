<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/loan_boxcode_scanner_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="产品码/箱码:" />

        <scut.carson_ho.diy_view.SuperEditText
            android:id="@+id/loan_boxcode_scanner"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="33dp"
            android:inputType="textNoSuggestions"
            app:delete_height="40"
            app:delete_width="40"
            app:delete_x="0"
            app:delete_y="0"
            app:ic_delete="@drawable/delete"
            app:ic_left_click="@drawable/ic_left_click"
            app:ic_left_unclick="@drawable/ic_left_unclick"
            app:left_height="0"
            app:left_width="0"
            app:left_x="0"
            app:left_y="0"/>
        <TextView
            android:id="@+id/qrcode_xm_loan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="二维箱码：0"/>
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/loan_productcode_scanner_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="数量:" />

        <scut.carson_ho.diy_view.SuperEditText

            android:id="@+id/loan_productcode_scanner"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:inputType="textNoSuggestions"
            app:delete_height="40"
            app:delete_width="40"
            app:delete_x="0"
            app:delete_y="0"
            app:ic_delete="@drawable/delete"
            app:ic_left_click="@drawable/ic_left_click"
            app:ic_left_unclick="@drawable/ic_left_unclick"
            app:left_height="0"
            app:left_width="0"
            app:left_x="0"
            app:left_y="0" />
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/loan_platecode_scanner_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="托盘码:" />

        <scut.carson_ho.diy_view.SuperEditText
            android:id="@+id/loan_platecode_scanner"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:inputType="textNoSuggestions"
            app:delete_height="40"
            app:delete_width="40"
            app:delete_x="0"
            app:delete_y="0"
            app:ic_delete="@drawable/delete"
            app:ic_left_click="@drawable/ic_left_click"
            app:ic_left_unclick="@drawable/ic_left_unclick"
            app:left_height="0"
            app:left_width="0"
            app:left_x="0"
            app:left_y="0"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/loan_cwarehouse_scanner_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:text="仓库:" />

        <Spinner
            android:id="@+id/loan_spinner_scanner_text"
            android:layout_width="220dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"></Spinner>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/loan_ok_scanner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="10dp"
            android:text="确定" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/loan_scannednum_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="已扫码数量：" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginTop="10dp"
        android:background="#A7A5A5" />

    <include
        android:id="@+id/table_title_loan_qrscanner"
        layout="@layout/list_item_loan_qr_scanner" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dip"
        android:background="#686867" />

    <ListView
        android:id="@+id/list_body_loan_qrdetail_scanner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/listview_bg"
        android:cacheColorHint="@android:color/transparent"
        android:divider="#B4B3B3"
        android:dividerHeight="1.0dip"
        android:fadingEdge="none"
        android:scrollbars="none"></ListView>

</LinearLayout>