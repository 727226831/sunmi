<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.shanggmiqr.RepairActivity">
    <RelativeLayout
        android:id="@+id/rl_cwhcode0"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center_vertical"
            style="@style/textview"
            android:id="@+id/tv_title0"
            android:text="用户名："
            />

        <EditText
            android:layout_centerVertical="true"
            style="@style/edittext"
            android:id="@+id/et_user"
            android:layout_toRightOf="@id/tv_title0"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_cwhcode"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center_vertical"
            style="@style/textview"
            android:id="@+id/tv_title1"
            android:text="原密码："

            />

        <EditText
            android:inputType="textPassword"
            android:layout_centerVertical="true"
            style="@style/edittext"
            android:id="@+id/et_old"
            android:layout_toRightOf="@id/tv_title1"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_cwhcode2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center_vertical"
            style="@style/textview"
            android:id="@+id/tv_title2"
            android:text="新密码："
            />

        <EditText
            android:inputType="textPassword"
            android:layout_centerVertical="true"
            style="@style/edittext"
            android:id="@+id/et_new"
            android:layout_toRightOf="@id/tv_title2"
            />
    </RelativeLayout>
    <Button
        android:layout_gravity="center_horizontal"
        android:layout_centerVertical="true"
        android:id="@+id/b_submit"
        android:layout_margin="10dp"
        android:layout_alignParentRight="true"
        android:background="@color/blue"
        android:textColor="@android:color/white"
        android:text="确定"
        android:layout_width="wrap_content"
        android:layout_height="40dp" />
</LinearLayout>
